{
  "extends": "tslint:recommended",
  "rules": {
    "align": false,
    "interface-name": [true, "never-prefix"],
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "quotemark": [true, "single", "jsx-double"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
